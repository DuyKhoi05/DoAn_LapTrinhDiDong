<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Avatar -->
            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_placeholder"
                android:clickable="true"
                android:focusable="true" />

            <!-- Name -->
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_name3"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="8dp" />

            <!-- Email -->
            <TextView
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_email_com3"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s_t2"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a_ch2"
                android:textSize="14sp"
                android:gravity="center" />

            <!-- Sản phẩm đã đăng -->
            <TextView
                android:text="@string/s_n_ph_m_ng2"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Nút Chỉnh sửa thông tin -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_user_products"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ch_nh_s_a_th_ng_tin2"
                android:layout_marginTop="8dp" />

            <!-- Nút Thêm sản phẩm -->
            <Button
                android:id="@+id/btn_add_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/th_m_s_n_ph_m" />

            <Button
                android:id="@+id/btn_payment_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/l_ch_s_thanh_to_n" />


            <!-- Nút Trò chuyện -->
            <Button
                android:id="@+id/btn_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chuy_n_sang_tr_chuy_n2" />

            <!-- Nút Đăng xuất -->
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ng_xu_t"
                android:backgroundTint="#FF4444"
                android:textColor="@android:color/white" />

            <!-- Nút Xóa tài khoản -->
            <Button
                android:id="@+id/btn_delete_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/x_a_t_i_kho_n"
                android:backgroundTint="#CC0000"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>